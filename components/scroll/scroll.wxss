.area {
  width : 100vw;
  height: calc(100% + 60px);
}

.area-inner {
  width : 100vw;
  height: calc(100% - 60px);
}

.scroll {
  /* position: relative; */
  overflow: hidden;
  z-index : 1
}

.scroll .refresh-container {
  width              : 100%;
  display            : -webkit-flex;
  display            : flex;
  -webkit-align-items: center;
  align-items        : center;
  background-size    : cover;
  background-repeat  : no-repeat
}

.scroll .refresh-container .refresh-inner {
  position       : absolute;
  text-align     : center;
  width          : 100%;
  font-size      : 28rpx;
  display        : flex;
  justify-content: center;
  align-items    : center;
}

.scroll .isLoadMoreLoading,
.scroll .isRefreshLoading {
  text-align : center;
  height     : 40rpx;
  line-height: 40rpx;
  padding    : 40rpx 0;
  color      : #999;
  font-size  : 28rpx;
}

.scroll .isLoadMoreLoading {
  display          : flex;
  justify-content  : center;
  align-items      : center;
  background-size  : contain;
  background-repeat: no-repeat;
  background-position: center;
}

.scroll .isLoadMoreLoading .ico,
.scroll .isRefreshLoading .ico {
  width               : 1.2em;
  height              : 1.2em;
  vertical-align      : middle;
  margin-right        : 10px;
  /* -webkit-transform: translateY(-1px);
  transform           : translateY(-1px) */
}

.scroll .inner {
  min-height: 100%
}

.scroll .inner-empty {
  text-align: center;
  color     : #999;
  height    : 100%;
  overflow  : hidden
}

.scroll .inner-empty .empty-text {
  font-size: 28rpx;
}

.scroll .inner-empty .empty-img {
  width  : 210rpx;
  height : 227rpx;
  margin : 20vw auto 0;
  display: block
}

.down {
  width           : 28px;
  height          : 28px;
  background-image: url('data:image/png;base64,');
  background-size : cover;
}

.refresh-img {
  width         : 1.2em;
  height        : 1.2em;
  vertical-align: middle;
  margin-right  : 10px;
}