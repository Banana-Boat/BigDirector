#create-project-btn{
  position: fixed;
  bottom: 0;
  width: 100vw;
  padding-bottom:20rpx;
}

.pro-empty-area{
  width: 100%;
  height: 30%;
}

.pro-empty-icon{
  width: 100%;
  height: 80%;
  padding:20rpx;
}

.pro-empty-text{
  width: 100%;
  height: 20%;
}

.project-item{
  height: 100rpx;
  width: 100%;
}

.project-item .project-item-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.project-item .project-item-item .item-top{
  height:50%;
  width:100%;
}

.project-item .project-item-item .item-under{
  height: 50%;
  width: 100%;
}


