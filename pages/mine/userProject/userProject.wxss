/* pages/mine/userProject/userProject.wxss */

#create-project-btn{
  position:fixed;
  width: 100vw;
  bottom: 0;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.pro-empty-area{
  width: 100%;
  height: 30%;
}

.pro-empty-icon{
  width: 100%;
  height: 80%;
  padding:20rpx;
}

.pro-empty-text{
  width: 100%;
  height: 20%;
}

.project-item{
  height: 150rpx;
  width: 100%;
}

.project-item .project-item-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.project-item .project-item-item .item-top{
  height:50%;
  width:100%;
}

.project-item .project-item-item .item-under{
  height: 50%;
  width: 100%;
}

#create-project-btn-confirm{
  position: fixed;
  bottom: 0;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  width: 100vw;
}

.cu-form-group .title {
  min-width: calc(4em + 30rpx);
}


